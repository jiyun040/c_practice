#include <stdio.h>

int main(void)
{
    int num;

    while (1)
    {
        printf("number? ");
        scanf("%d", &num);
        if (num > 0)
        {
            printf("positive integer\n");
        }
        else if (num < 0)
        {
            printf("negative number\n");
        }
        else if (num == 0)
        {
            break;
        }
    }

    return 0;
}
